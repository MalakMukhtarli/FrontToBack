@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-warning">@Model.Name</h4>
                    <p>
                        @Html.Raw(Model.Description)
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <a asp-action="Index" class="btn btn-outline-secondary">Go Back</a>
    </div>
</div>

