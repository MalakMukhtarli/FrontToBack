@model List<BasketVM>
@{
    ViewData["Title"] = "Basket";
    int count = Model.Count();
    double total = 0;
}
    <div class="container">
        <div class="row">
            @if (count != 0)
            {
                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Title</th>
                            <th scope="col">Price</th>
                            <th scope="col">Count</th>
                            <th scope="col">Deleted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BasketVM basket in Model)
                        {
                            <tr>
                                <td><img src="~/img/@basket.Image" width="150" /></td>
                                <td>@basket.Title</td>
                                <td>@basket.Price</td>
                                <td>@basket.Count</td>
                                <td><a id="deleted" asp-controller="Home" asp-action="RemoveBasketData" asp-route-id="@basket.Id" style="background-color:transparent"><i class="far fa-times-circle"></i></a></td>
                            </tr>
                            total += @basket.Price;
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th scope="col" colspan="2">Total:</th>
                            <td scope="col" colspan="3">@total</td>
                        </tr>
                    </tfoot>
                </table>
            }
            else
            {
                <h2>Sebetiniz boshdur, buradan <a asp-controller="Home" asp-action="Index">Mehsullarimiza</a> baxa bilersiniz!</h2>
            }
        </div>
    </div>



